
@{
    ViewBag.Title = "Detail";
}
<br />
<a class="btn" href="/Home/Index/">Back</a>
<br />
<div class="stayOnRight">
    @using (Html.BeginForm("AddToCart", "Purchase"))
    {
        <button type="submit" name="inputArtId" value="@ViewBag.detail.ArtId" onclick="Materialize.toast('Added To Cart',4000)" class="btn btn-large green lighten-1">Add To Cart</button>
    }
</div>


<h4>@ViewBag.detail.ArtName</h4>
<p>Type: @ViewBag.detail.ArtType</p>
<p>Format: @ViewBag.detail.FormatType</p>
<p>Size: @ViewBag.detail.Size</p>
<p>Dimension: @ViewBag.detail.Dimension</p>
<p>Photographer: @ViewBag.detail.Artist.ArtistFirstName @ViewBag.detail.Artist.ArtistLastName</p>
<p><b>Price: $@ViewBag.detail.CurrentPrice</b></p>
<img src='@ViewBag.detail.Link' />



